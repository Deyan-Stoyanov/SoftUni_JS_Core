<section id="viewFlightDetails">
    <div class="ticket-area">
        <div class="ticket-area-left">
            <img src="{{img}}" alt="">
        </div>
        <div class="ticket-area-right">
            <h3>{{destination}}</h3>
            <div>from {{origin}}</div>
            <div class="data-and-time">
                {{departureDate}} {{departureTime}}
                {{#if isPublisher}}
                    <a href="#/flights/edit/:{{flightId}}" class="edit-flight-detail">Edit</a>
                    <a href="#/flights/delete/:{{flightId}}" class="delete-flight-detail">Delete</a>
                {{/if}}
            </div>
            <div>
                {{seats}} Seats ({{cost}} per seat)
            </div>
        </div>
    </div>
</section>
