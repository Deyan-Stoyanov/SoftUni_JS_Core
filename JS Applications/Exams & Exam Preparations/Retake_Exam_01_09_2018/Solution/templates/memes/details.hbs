{{> header}}
<div class="meme-details">
    <div class="my-meme-details">
        <a href="#" id="meme-title">{{title}}.</a>
        <img src="{{imageUrl}}">
        <div class="meme-props">
            <h2>Description</h2>
            <p class="meme-description">
                {{description}}
            </p>
        </div>

        <div class="meme-details-buttons">
            <a class="meme-details-button" href="#/profile/:{{userId}}">Created by {{author}}</a>
            {{#if isAuthor}}
                <a href="#/memes/edit/:{{memeId}}" class="meme-details-button">Edit</a>
                <a href="#/memes/delete/:{{memeId}}" class="meme-details-button">Delete</a>
            {{/if}}
        </div>
    </div>
</div>
{{> footer}}
